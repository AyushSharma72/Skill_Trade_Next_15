# MongoDB connection URI
DB_CONNECT=mongodb://localhost:27017/skill_trade

# =======================
# Google OAuth Credentials
# =======================
# Get these from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

GOOGLE_CLIENT_SECRET=your-google-client-secret

# The callback URL registered in Google Cloud (change domain in production)
GOOGLE_REDIRECT_URI=http://localhost:8000/api/google/callback
# For production, set to:
# GOOGLE_REDIRECT_URI=https://your-domain.com/api/google/callback

# JWT secret used for session encryption
JWT_SECRET=your-random-jwt-secret-key

# =======================
# Frontend Base URL
# =======================
# Used for redirects from backend to frontend
NEXT_PUBLIC_BASE_URL=http://localhost:3000

